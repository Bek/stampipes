profiles {
  standard {
    process.executor = 'local'
  }

  cluster {
    process.executor = 'slurm'
    process.queue = 'queue0'
    process.memory = '8GB'

    process.scratch = true
  }

  singularity {
    singularity.enabled = true
  }

  docker {
    process.container = "fwip/stampipes:latest"
    docker {
      enabled = true
      fixOwnership = true
      temp = 'auto'
      mountFlags = 'cached'
    }
  }
}

report {
  enabled = true
}
trace {
  enabled = true
}
timeline {
  enabled = true
}
dag {
  enabled = true
  file = "dag.html"
}
